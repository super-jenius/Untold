  <tier type="location" description="TIER 8/11&#13;Return to Tanis." playField="3090" x="549" y="73" z="447" distance="4" yDistance="1"/>
  <tier type="cinematic" description="TIER 8/11&#13;Listen to Tanis." playField="3090" >
    <cinematic type="fadeout" duration="2" />
    <cinematic type="dialog" line="" duration="0.5" />
    <cinematic type="facenpc" name="Tanis"/>
    <cinematic type="camera" duration="0" posX="566.3" posY="76" posZ="438.7" targetX="549.3" targetY="73" targetZ="447.3" />
    <cinematic type="camera" duration="50000" posX="553.6" posY="73.5" posZ="443.9" targetX="549.3" targetY="73" targetZ="447.3" />
    <cinematic type="fadein" duration="5" />
    <cinematic type="dialog" line="" duration="2" />
    <cinematic type="dialog" line="Venice... ever-vigilant in bureaucracy and documentation." />
    <cinematic type="dialog" line="Century after century preserving the minutes of every meeting." />
    <cinematic type="dialog" line="Their network firewalls aren't as fragile as we predicted, but it is only a matter of time." />
    <cinematic type="camera" duration="0" posX="555" posY="73.5" posZ="450.2" targetX="549.3" targetY="73" targetZ="447.3" />
    <cinematic type="camera" duration="60000" posX="549.3" posY="73" posZ="447.3" targetX="549.3" targetY="73" targetZ="447.3" />
    <cinematic type="dialog" line="There is always a paper trail, in this case, literal paper." />
    <cinematic type="dialog" line="Most of it redacted, of course, but sometimes old pages stick together." />
    <cinematic type="dialog" line="We are in luck." />
    <cinematic type="fadeout" duration="3" />
  </tier>

